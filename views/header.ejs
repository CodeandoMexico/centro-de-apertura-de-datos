
<div id="header" class="row">
  <a id="header-anchor" href="http://datamx.io">
    <img id="header-image" alt="datamx.io" src="http://i.imgur.com/weQNDQL.png" />
  </a>
  <ul class="header-navigation" id="header-navigation">
    <li>Datos</li>
    <li>Organizaciones</li>
    <li>Apps</li>
    <li><a href="http://apertura-de-datos.herokuapp.com/">Centro de Apertura</a></li>
  </ul>
  <div class="header-login">
    <% if (!req.session.user || typeof req.session.user === 'undefined') { %>
      <ul class="header-navigation">
        <li>
          <a href="/user/signin">Iniciar Sesi&oacute;n</a>
        </li>
      </ul>
    <% } else { %>
      <% console.log(req.session.user) %>
      <img class="user-profile-picture" width="30" height="30" src="<%= req.session.user.profile_image_url %>"/>

      <ul class="header-navigation">
        <li>
          <button id="popover-login" data-toggle="popover" data-content="">
            <%= req.session.user.name %>
          </button>
        </li>
      </ul>
    <% } %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#popover-login').popover({
    trigger: 'focus',
    placement: 'bottom',
    html: true,
    content: '<a style="color:black;width:200px;" href="/user/signout">Logout</a>',
  });
});
</script>

