    <h3> 
      <% if (pd.show_prev_page_btn) { %>
        <% if (typeof search_term === 'undefined') { %>
          <button class="btn btn-hollow btn-purple btn-thin" onclick="location.href='/request/index?sort_by=<%= sorting_method %>&page=<%= pd.previous_page %>'">
        <% } else { %>
          <button class="btn btn-hollow btn-purple btn-thin" onclick="location.href='/request/search?sort_by=<%= sorting_method %>&page=<%= pd.previous_page %>&q=<%= search_term %>'">
        <% } %>
          < p&aacute;gina <%= pd.previous_page %>
        </button>
      <% } else { %>
        <button class="btn btn-hollow btn-purple btn-thin btn-hidden">
          < p&aacute;gina -
        </button>
      <% } %>
      <button class="btn btn-hollow btn-purple btn-current-page btn-thin">
        <%= pd.requested_page %>
      </button>
      <% if (pd.show_next_page_btn) { %>
        <% if (typeof search_term === 'undefined') { %>
          <button class="btn btn-hollow btn-purple btn-thin" onclick="location.href='/request/index?sort_by=<%= sorting_method %>&page=<%= pd.next_page %>'">
        <% } else { %>
          <button class="btn btn-hollow btn-purple btn-thin" onclick="location.href='/request/search?sort_by=<%= sorting_method %>&page=<%= pd.next_page %>&q=<%= search_term %>'">
        <% } %>
          p&aacute;gina <%= pd.next_page %> >
        </button>
      <% } else { %>
        <button class="btn btn-hollow btn-purple btn-thin btn-hidden">
          p&aacute;gina + >
        </button>
      <% } %>
    </h3>
