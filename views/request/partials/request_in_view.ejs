<div class="container-fluid">
  <div class="requested-data row">
    <div class="col-md-1 centered-text vote">
      <% if (req.session.user) { %>
        <% if (!voted_by_user) { %>
          <a title="Dar mi voto" class="btn-vote btn-give-vote-unvoted" onclick="$('#voteForm').attr('action', '/user/giveVote');$('#voteFormRequestIdInput').val('<%= request.id %>');$('#voteForm').submit()">
            <i class="glyphicon glyphicon-chevron-up"></i>
          </a>
        <% } else { %>
          <a title="Ya has votado" class="btn-vote btn-give-vote-voted">
            <i class="glyphicon glyphicon-chevron-up"></i>
          </a>
          <a title="Quitar mi voto" class="btn-vote-small btn-remove-vote" onclick="$('#voteForm').attr('action', '/user/removeVote');$('#voteFormRequestIdInput').val('<%= request.id %>');$('#voteForm').submit()">
            <i class="glyphicon glyphicon-remove"></i>
          </a>
        <% } %>
      <% } else { %>
          <a title="Dar mi voto" class="btn-vote btn-give-vote-unvoted" data-toggle="modal" href="#youMustLoginModal">
            <i class="glyphicon glyphicon-chevron-up"></i>
          </a>
      <% } %>
      <div class="vote-count">
        <% if (request.voted.length == 1) { %>
          1 voto
        <% } else { %>
          <%= request.voted.length %> votos
        <% } %>
      </div>
    </div>
    <div class="requested-data-info col-md-10">
      <h3 class="title">
        <%= request.title %>
      </h3>
      <div class="request-details">
        Solicitado <%= sails.config.moment(request.createdAt).fromNow() %> (<%= sails.config.moment(request.createdAt).format('MMMM D YYYY, HH:mm') %>)
        <br />
        URL: <a href="<%= request.url %>" target="_blank"><%= request.url %></a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="requested-data-description col-md-1"></div>
    <div class="requested-data-description col-md-10">
      <%= request.description %>
    </div>
  </div>
</div>
