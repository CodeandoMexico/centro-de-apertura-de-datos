<%- partial('../intro') %>

<div class="container">
  <div class="row">
    <div class="col-md-12"> 

      <div class="panel">
        <div class="panel-body">
          <div>
            <%- partial('partials/filters_n_search') %>
          </div>

          <% if (requests.length == 0) { %>
            <div class="wide-centered-text">
              <span class="sized-font">No hay solicitudes.</span>
            </div>
          <% } else { %>
            <% for(i in requests) { %>
              <%- partial('partials/request_in_index', {request: requests[i], vote_dict: vote_dict}) %>
              <% if (i != requests.length - 1) { // no HR for last entry %>
                <hr>
              <% } %>
            <% } %>
          <% } %>

          <div class="paginator row">
            <%- partial('partials/page_buttons') %>
          </div>
        </div>
      </div>
      
    </div><!--end col-12-->
  </div>

  <div class="row">
    <div class="col col-sm-12">
      <h1>Encu&eacute;ntranos en</h1>
      <div class="btn-group">
        <a class="btn btn-twitter btn-lg" target="_blank" href="https://twitter.com/datamx_io"><i class="icon-twitter icon-large"></i> Twitter</a>
        <a class="btn btn-facebook btn-lg" target="_blank" href="https://es-es.facebook.com/CodeandoMexico"><i class="icon-facebook icon-large"></i> Facebook</a>
      </div>
    </div>
  </div>
  <br><br>

</div>

