<%- partial('../root_partials/intro') %>

<div id="main-content-div" class="container">

  <div>
    <%- partial('partials/filters_n_search') %>
  </div>

  <ul class="requested-data-list">
    <% if (requests.length == 0) { %>
        <div class="wide-centered-text">
          <span class="sized-font">No hay solicitudes.</span>
        </div>
    <% } else { %>
      <% for(i in requests) { %>
        <li>
          <%- partial('partials/request_in_index', {request: requests[i], vote_dict: vote_dict}) %>
          <% if (i != requests.length - 1) { // no HR for last entry %>
            <hr>
          <% } %>
        </li>
      <% } %>
    <% } %>
  </ul>

  <div class="paginator row">
    <%- partial('partials/page_buttons') %>
  </div>

</div>

<%- partial('../root_partials/new_request_modal') %>
